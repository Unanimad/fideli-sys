<?xml version='1.0' encoding='utf-8'?>
  <widget id="club.fideli.pizzariaebotecoitabaiana" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pizzaria e Boteco Itabaiana</name>
    <description>
      Gerenciamento de fidelidade.
    </description>
    <author email="contato@2code.com.br" href="http://2code.com.br">
      2Code
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />

    <icon src="www/company/logo.png" />

    <platform name="android">

      <splash src="www/company/res/screens/android/screen-hdpi-portrait.png" density="port-hdpi" />
      <splash src="www/company/res/screens/android/screen-ldpi-portrait.png" density="port-ldpi" />
      <splash src="www/company/res/screens/android/screen-mdpi-portrait.png" density="port-mdpi" />
      <splash src="www/company/res/screens/android/screen-xhdpi-portrait.png" density="port-xhdpi" />
      <splash src="www/company/res/screens/android/screen-xxhdpi-portrait.png" density="port-xxhdpi" />
      <splash src="www/company/res/screens/android/screen-xxxhdpi-portrait.png" density="port-xxxhdpi" />

      <allow-intent href="market:*" />

    </platform>

    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="ShowSplashScreenSpinner" value="false" />

    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#333" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="tel:*" launch-external="yes" />
    <access launch-external="yes" origin="http://*/*" />
    <access launch-external="yes" origin="tel:*" />

  </widget>